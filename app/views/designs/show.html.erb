<div class="page-header">
  <%= link_to designs_path, class: 'btn btn-default' do %>
    <span class="glyphicon glyphicon-list-alt"></span>
    Back
  <% end %>
  <%= link_to edit_design_path(@design), class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-pencil"></span>
    Edit
  <% end %>
  <h1>Show design</h1>
</div>

<dl class="dl-horizontal">
  <dt>Name:</dt>
  <dd><%= @design.name %></dd>
  <dd><%=image_tag @design.avatar(:original) %></dd>

  <dt>Price:</dt>
  <dd><%= @design.price %></dd>

  <dt>Description:</dt>
  <dd><%= @design.description %></dd>

</dl>
